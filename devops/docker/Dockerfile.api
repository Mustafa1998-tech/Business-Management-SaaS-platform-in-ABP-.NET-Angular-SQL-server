FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY backend ./backend
RUN dotnet restore backend/SaasSystem.slnx
RUN dotnet publish backend/src/SaasSystem.HttpApi.Host/SaasSystem.HttpApi.Host.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "SaasSystem.HttpApi.Host.dll"]
